<div class="col-md-4" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 shadow-sm">
    <%= image_tag portfolio_img(portfolio_item.thumb_image, 'thumb') %>
    <div class="card-body">
      <p class="card-text">
        <span><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></span>
        <%=portfolio_item.subtitle%>
      </p>
      <div class="d-flex justify-content-between align-items-center">
        <div class="btn-group">
          <%= link_to "Edit", edit_portfolio_path(portfolio_item), class:"btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>
          <%= link_to "Delete Portfolio", portfolio_path(portfolio_item), class:"btn btn-sm btn-outline-secondary", method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
        </div>
      </div>
    </div>
  </div>
</div>


